<?xml version='1.0' encoding='utf-8'?>
<odoo>

<!-- HEADER - METHOD #01 - Add Custom Header -->
<!-- ======================================= -->

<!-- Theme Header - Layout -->
<record id="template_header_layout" model="ir.ui.view">
    <field name="name">capturehk Header</field>
    <field name="type">qweb</field>
    <field name="key">website_capturehk.template_header_layout</field>
    <field name="priority">16</field>
    <field name="inherit_id" ref="website.layout"/>
    <field name="mode">extension</field>
    <field name="arch" type="xml">
        <xpath expr="//header//nav" position="replace">

                <t t-call="website.navbar">
                    <t t-set="_navbar_classes" t-valuef="shadow-sm"/>
                    <div id="top_menu_container" class="container justify-content-start justify-content-lg-between">
                        <!-- Brand -->
                        <t t-call="website.placeholder_header_brand">
                            <t t-set="_link_class" t-valuef="mr-4"/>
                        </t>
                        <!-- Navbar Collapse -->
                        <div id="top_menu_collapse" class="collapse navbar-collapse order-last order-lg-0">
                            <t t-call="website.navbar_nav">
                                <t t-set="_nav_class" t-valuef="flex-grow-1"/>
                                <!-- Menu -->
                                <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                    <t t-call="website.submenu">
                                        <t t-set="item_class" t-valuef="nav-item"/>
                                        <t t-set="link_class" t-valuef="nav-link"/>
                                    </t>
                                </t>
                                <!-- Sign In -->
                                <t t-call="portal.placeholder_user_sign_in">
                                    <t t-set="_item_class" t-valuef="nav-item ml-lg-auto"/>
                                    <t t-set="_link_class" t-valuef="nav-link font-weight-bold"/>
                                </t>
                                <!-- User Dropdown -->
                                <t t-call="portal.user_dropdown">
                                    <t t-set="_user_name" t-value="true"/>
                                    <t t-set="_item_class" t-valuef="nav-item dropdown ml-lg-auto"/>
                                    <t t-set="_link_class" t-valuef="nav-link font-weight-bold"/>
                                </t>
                            </t>

                            <!-- Language Selector -->
                            <t t-call="website.placeholder_header_language_selector">
                                <t t-set="_div_classes" t-valuef="my-auto ml-lg-2"/>
                            </t>
                            
                            <!-- Call To Action -->
                            <div class="d-block d-lg-none mt-3"><a class="btn btn-primary btn_cta border-0 bg-o-color-1 rounded-0" href="/buy-now">Buy Now</a></div>
                        </div>

                        <!-- Shopping cart-->
                        <t t-call="website_sale.header_cart_link">
                                <t t-set="_icon" t-value="True"/>
                                <t t-set="_item_class" t-value="'align-self-md-center nav-item position-relative list-unstyled ml-auto ml-lg-0'"/>
                                <t t-set="_link_class" t-value="'nav-link'"/>
                        </t>

                        <div class="ml-lg-4 d-none d-lg-block"><a class="btn btn-primary btn_cta border-0 bg-o-color-1 rounded-0" href="/buy-now">Buy Now</a></div>

                        <!-- Navbar Toggler -->
                        <t t-call="website.navbar_toggler">
                            <t t-set="_toggler_class" t-valuef="ml-0"/>
                        </t>
                    </div>
                </t>

        </xpath>
    </field>
</record>

